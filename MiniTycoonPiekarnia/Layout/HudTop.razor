<div class="hud-container">
    <div class="hud-item">
        <span class="hud-icon">💵</span>
        <span class="hud-label">Pieniądze:</span>
        <span class="hud-value">@GameState.Bakery.Money.ToString("0.00") zł</span>
    </div>
    <div class="hud-item">
        <span class="hud-icon">🏠</span>
        <span class="hud-label">Poziom:</span>
        <span class="hud-value">@GameState.Bakery.BakeryLevel</span>
    </div>
    <div class="hud-item">
        <span class="hud-icon">😋</span>
        <span class="hud-label">Zadowolenie:</span>
        <span class="hud-value">@GameState.Bakery.CustomerSatisfaction %</span>
    </div>
</div>
